<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_full_open_on_phone"
    tools:context="com.example.rahul.firerj.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="30dp"
        android:fontFamily="cursive"
        android:layout_marginTop="126dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edtmob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:fontFamily="cursive"
        android:textSize="30dp"
        android:hint="Enter Mobile Number"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnmob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND OTP"
        android:layout_below="@+id/edtmob"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <EditText
        android:id="@+id/vcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Verification Code"
        android:textSize="30dp"
        android:fontFamily="cursive"
        android:layout_below="@+id/btnmob"
        android:layout_alignLeft="@+id/edtmob"
        android:layout_alignStart="@+id/edtmob"
        android:layout_alignRight="@+id/edtmob"
        android:layout_alignEnd="@+id/edtmob" />

    <Button
        android:id="@+id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnmob"
        android:layout_alignStart="@+id/btnmob"
        android:layout_below="@+id/vcode"
        android:layout_marginTop="20dp"
        android:text="SUBMIT" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="400dp"
        android:background="@mipmap/ic_launcher"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
